extends base
block content
	for post in posts
		.post.post_in_list
			h1.entry_title
				a(href=post.url)= post.title
			.post_body= post.content.limit(250)
			.info
				.datetime= post.date.format('%Y - %m - %d')
				.read_more
					a(href=post.url)= '> 阅读全文' if lang=='zh_cn' else '> Read More'
				.clear
	include include/paginator.jade

				


