html
	head
		load('/template/css/basic.css /template/css/style.css')
		title
			block title
				site.title
		meta(name="description", content=site.raw_content)
		meta(content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0", name="viewport")
    	meta(content="yes", name="apple-mobile-web-app-capable")
    	meta(content="black", name="apple-mobile-web-app-status-bar-style")
    	meta(content="telephone=no", name="format-detection")
	body
		#wrapper.site
			.site-header
				header#masthead.banner
					h1.site-title
						a(href="/")= site.configs.author or site.title
					p.site-description= site.configs.subtitle
			#main.site-main
				#primary.content-area
					#content.site-content(role="main")
						block content

					#footer
						span Powered by
						a(href='http://www.farbox.com') FarBox