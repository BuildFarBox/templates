block content
	.detail-post
		h1= '对不起，您访问的页面不存在。' if lang=='zh_cn' else 'Oops~, Page Not Found.'
		.post_body
			p= 	''
				.search-bar
					input(type="text", id='search-bar-2', placeholder="Search", value="", type="text",onkeyup="if (event.keyCode == 13) search2();"  )
				
				.center
