	script(type="text/javascript")
		document.addEventListener("DOMContentLoaded", function(event) { 
		  	var s = document.getElementById('search-bar-2');
		   	if (s){s.focus();}				
		});

		function search2(){
            if (document.getElementById('search-bar-2').value){
                location.href='http://'+location.host+'?s='+document.getElementById('search-bar-2').value
            }
            else{
                return false;
            }
        }