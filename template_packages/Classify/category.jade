extends base.jade
block title
	if category
		| {{ category.title }}
	else
		+raise_404
block content

	#category_posts
		h1= category.title
		ul
			for post in posts
				li
					a(href=post.url)= post.title
					.date= post.date.format('%d %b %Y')

	.pager
		if paginator.has_pre
			a.round.pre(href=paginator.pre_url) ← Newer
		if paginator.has_next
			a.round.next(href=paginator.next_url) Older →