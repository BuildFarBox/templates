html
	head
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(name="renderer", content="webkit")
		meta(name="keywords", content=site.configs.keywords.escaped)
		meta(name="description", content=site.raw_content.escaped)
		title
			block title
				site.title
		load("/template/basic.scss /template/style.scss")
	body
		.header_wrap
			.header.container
				a.logo(href='/', title=site.title)= site.title
				.links
					a(href="/") Home
					a(href="/archive") Archive
					if has('images')
						a(href='/album') Albums
						if not has('posts')
							+redirect('/album')
					if has('about.md')
						a(href="/about.md") About
		.content_wrap
			.content.container
				block content

		.footer_wrap
			.footer
				p Inspired by &nbsp;
					a(href="http://copri.me") Jaden &nbsp;
					| & Powered by
					a(href="https://www.farbox.com") farbox.com