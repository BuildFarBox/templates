extends base

block title
	post.title

block content
	div.post.detail_post
		h2.title
			a(href=post.url)
				i.fa.fa-leaf
				post.title
		.post_body= post.content
		.info
			span.date
				i.fa.fa-clock-o
				post.date
			span.visitors
				i.fa.fa-user
				post.visits
			if post.tags
				span.tags
					i.fa.fa-tags
					for tag in post.tags
						a(href="/tags/{{tag}}") {{tag}}

	include include.comments
